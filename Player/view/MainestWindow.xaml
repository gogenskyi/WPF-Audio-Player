<Window x:Class="Player.view.MainestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Player.view"
		xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:vm="clr-namespace:Player.ViewModels"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Loaded="Window_Loaded1"
        Title="Null Player"
		Height="550" 
		Width="800" 
		MinHeight="550" 
		MinWidth="800"
        Opacity="0.8"
        fw:AcrylicPanel.TintOpacity="0.6"
		fw:AcrylicWindow.Enabled="true"
        ResizeMode="CanResizeWithGrip" 
        SizeToContent="Width" 
        WindowState="Minimized">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="100" MaxWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="500"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0">
            <Border ClipToBounds="True"
                    CornerRadius="360">
                <Button Height="25" 
                        Width="auto"
                        ToolTip="Click here to select playlist"
                        Background="Transparent"
                        Command="{Binding LoadMusicCommand}"
                        VerticalAlignment="Center"
>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding PlaylistName}"
                                   FontFamily="Arial"
                                   FontSize="15">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="1" ShadowDepth="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Button>
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <ListBox ItemsSource="{Binding Songs}" 
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     SelectedItem="{Binding SelectedSong, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Height="40" Width="40"
                                           Margin="0 1 10 0"
                                           RadiusX="1.5"
                                           RadiusY="1.5">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="{Binding AlbumArt}"/>
                                </Rectangle.Fill>
                                <Rectangle.Effect>
                                    <DropShadowEffect BlurRadius="3" ShadowDepth="1.3"/>
                                </Rectangle.Effect>
                            </Rectangle>
                            <StackPanel Orientation="Vertical" 
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Padding="0"
                                               FontFamily="Arial Rounded MT Bold">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="01" ShadowDepth="0.3"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="{Binding Artist}"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Padding="0"
                                               FontFamily="Arial Rounded MT Bold">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="01" ShadowDepth="0.3"/>
                                    </TextBlock.Effect>

                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Grid Grid.Column="2" Grid.RowSpan="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Rectangle Width="200"
                           Height="200"
                           RadiusX="3"
                           RadiusY="3">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="{Binding SelectedAlbum}" Stretch="UniformToFill"/> 
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <DropShadowEffect BlurRadius="1" ShadowDepth="1" Color="Black"/>
                    </Rectangle.Effect>
                </Rectangle>
                <StackPanel Margin="3" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding SelectedTitle}"
                               HorizontalAlignment="Center"
                               FontSize="14">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="1" ShadowDepth="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="{Binding SelectedArtist}"
                               FontSize="10"
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="1" ShadowDepth="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
                <Slider Style="{StaticResource MaterialDesignSlider}"
                        Value="{Binding TrackPositionSeconds, Mode=TwoWay}"
                        IsSnapToTickEnabled="True"
                        Foreground="#f111"
                        Maximum="{Binding TrackDurationSeconds}"
                        MinWidth="425"
                        MaxWidth="1080"
                        Padding="200"
                        Background="Transparent"
                        PreviewMouseUp="Slider_PreviewMouseUp"
                        PreviewMouseLeftButtonUp="Slider_PreviewMouseLeftButtonUp"
                        PreviewMouseDown="Slider_PreviewMouseDown"/>

                <Grid Margin="6">
                    <TextBlock HorizontalAlignment="Left"
                               Text="{Binding CurrentTimePosition}"/>
                    <TextBlock HorizontalAlignment="Right"
                               Text="{Binding DurationTimePosition}"/>
                </Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Height="30" Width="30" Padding="0"
                            Margin="10 0"
                            Command="{Binding PreviuosCommand}">
                        <StackPanel>
                            <fa:ImageAwesome Icon="Backward" Width="30" Height="30"/>
                        </StackPanel>
                    </Button>
                    <Button Height="50" Width="50" Padding="0"
                            Margin="10 0"
                            Command="{Binding PlayPauseCommand}">
                        <StackPanel>
                            <fa:ImageAwesome Icon="{Binding PlayPauseIcon}" Width="50" Height="50"/>
                        </StackPanel>
                    </Button>
                    <Button Height="30" Width="30" Padding="0"
                            Margin="10 0"
                            Command="{Binding NextCommand}">
                        <StackPanel>
                            <fa:ImageAwesome Icon="Forward" Width="30" Height="30"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
